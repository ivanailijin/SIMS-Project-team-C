<Window x:Class="TravelService.WPF.View.ShowGuestsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowGuestsView" Height="450" Width="800">
    <Grid Margin="0,0,0,52">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" MinHeight="75.04" />
        </Grid.RowDefinitions>

        <ListView Grid.Row="0" ItemsSource="{Binding GuestList}" SelectedItem="{Binding SelectedGuest}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Username" DisplayMemberBinding="{Binding Username}" />
                    <GridViewColumn Header="Current Checkpoint" DisplayMemberBinding="{Binding CheckPointId}" />
                </GridView>
            </ListView.View>
        </ListView>



        <Button Margin="324,15,356,10" Content="Show Review"  Width="120" Height="50" Command="{Binding showReviewsCommand}" RenderTransformOrigin="0.504,0.363" Grid.Row="1">

        </Button>
    </Grid>
</Window>
